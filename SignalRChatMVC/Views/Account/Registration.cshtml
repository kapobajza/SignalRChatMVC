@model SignalRChatMVC.Domain.Entities.User

@{
    ViewBag.Title = "Registration";
}

<h2>Registration</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <div class="form-group">
        <label>Username: </label> @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Password: </label> @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
    </div>
    @*<div class="form-group">
        <label>Email: </label> @Html.TextBoxFor(x => x., new { @class = "form-control" })
    </div>*@
    <input type="submit" value="Register" class="btn btn-primary" />
}